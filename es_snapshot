
# I. Указывае где находится snapshot'ы
PUT /_snapshot/fias
{
  "type": "fs",
  "settings": {
    "compress": "true",
    "location": "/Volumes/Macintosh HD/Users/oleg/elasticsearch/snapshots"
  }
}

# !!! УДАЛЯЕМ не нужный
DELETE /_snapshot/my_backup/snapshot_1

# Делаем бэкап
PUT /_snapshot/fias/snapshot_1?wait_for_completion=true

# II. Получаем статус
GET /_snapshot/_status
GET /_snapshot/my_backup/snapshot_1/_status

# III. Востанавливааем
POST /_snapshot/my_backup/snapshot_1/_restore
{
  "indices": "address"
}
